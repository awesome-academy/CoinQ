<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/textHomePage"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/back_ground_item_left"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/text_home_page"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@id/textHomePageURL"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textHomePageURL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoLink="web"
            android:background="@drawable/back_ground_item_right"
            android:gravity="center_vertical|end"
            android:textColorLink="@color/green_bot_nav"
            app:layout_constraintBottom_toBottomOf="@id/textHomePage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@id/textHomePage"
            app:layout_constraintTop_toTopOf="@id/textHomePage" />

        <TextView
            android:id="@+id/textBlockChain"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/back_ground_item_left"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/text_block_chain"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@id/textBlockChainURL"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textHomePage" />

        <TextView
            android:id="@+id/textBlockChainURL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoLink="web"
            android:background="@drawable/back_ground_item_right"
            android:gravity="center_vertical|end"
            android:textColorLink="@color/green_bot_nav"
            app:layout_constraintBottom_toBottomOf="@id/textBlockChain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@id/textBlockChain"
            app:layout_constraintTop_toTopOf="@id/textBlockChain" />

        <TextView
            android:id="@+id/textForum"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/back_ground_item_left"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/text_forum"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@id/textForumURL"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textBlockChain" />

        <TextView
            android:id="@+id/textForumURL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoLink="web"
            android:background="@drawable/back_ground_item_right"
            android:gravity="center_vertical|end"
            android:textColorLink="@color/green_bot_nav"
            app:layout_constraintBottom_toBottomOf="@id/textForum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@id/textForum"
            app:layout_constraintTop_toTopOf="@id/textForum" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/back_ground_description"
            android:padding="@dimen/dp_10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textForum" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

